<section id="compare">
<div class="jumbotron" style="background-image: url(/assets/introtestkite.jpg); background-size: 100%;">
   <div class="container for-about">
   <h1>comparer les foils</h1>
   </div>
</div>


<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Courbes</th>
      <th scope="col">Wind</th>
      <th scope="col">Transitions</th>

    </tr>
  </thead>
      <% @foils.each do |t, index| %>
  <tbody>
    <tr>
      <th scope="row"><%= t.name %></th>
      <td><% while @courbe < t.courbes %>
	    <i class="fas fa-star"></i>
	    <% @courbe = @courbe + 1 %>
	  <%end%>
	  <% @courbe = 0 %>
      </td>
      <td><% while @wind < t.wind %>
	    <i class="fas fa-star"></i>
	    <% @wind = @wind + 1 %>
	  <%end%>
	  <% @wind = 0 %>
      </td>
      <td><% while @transition < t.transitions %>
	    <i class="fas fa-star"></i>
	    <% @transition = @transition + 1 %>
	  <%end%>
	  <% @transition = 0 %>
      </td>

    </tr>
  </tbody>
<%end%>
</table> 
</section>

