<!DOCTYPE html>

<body class="profile-page sidebar-collapse">

  <div class="page-header" data-parallax="true" style="background-image: url('/assets/Cape_Town.jpg');"></div>
  <div class="main main-raised">
    <div class="profile-content">
      <div class="container">
        <div class="row">
          <div class="col-md-12 ml-auto mr-auto">
            <div class="profile">
              <div class="avatar" class="img-raised rounded img-fluid">
                <img src="/assets/testsurfboard/surfboard.jpg" alt="Circle Image" style="max-width: 100px">
                <img src="/assets/testsurfboard/surfboardcarre.jpg" alt="Circle Image" style="max-width: 50px">
                <img src="/assets/testsurfboard/surfboardback.jpg" alt="Circle Image" style="max-width: 100px">
              </div>
	    </div>
	  </div>
          <div class="col-md-4 ml-auto mr-auto">
            <div class="profile">
              <div class="name">
                <h3 class="title"><%= @surfboard.brand %> <%= @surfboard.name %></h3>
                <h6>Domain : <%= @surfboard.domain %></h6>
                <h6>Taille testé : <%= @surfboard.testsize %>m</h6>
                <h6>Son point fort : <%= @surfboard.favorite %></h6>
                <h6>Taille disponible : <%= @surfboard.size %></h6>
                <h6>Prix en shop : <%= @surfboard.price %>€ pour une <%= @surfboard.testsize %> nue</h6>

              </div>
            </div>
          </div>
        </div>
	</div>
	</div>

        <div class="row">
          <div class="col-md-8 ml-auto mr-auto">
            <div class="profile-tabs">
              <ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" href="#resume" role="tab" data-toggle="tab">
                    <i class="fas fa-id-card"></i> présentation
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#zoom" role="tab" data-toggle="tab">
                    <i class="material-icons">camera</i> Zoom
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#water" role="tab" data-toggle="tab">
                    <i class="fas fa-images"></i> photos
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#competence" role="tab" data-toggle="tab">
                    <i class="material-icons">favorite</i> competences
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#favorite" role="tab" data-toggle="tab">
                    <i class="fas fa-video"></i> video
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>


        <div class="tab-content tab-space">
          <div class="tab-pane active text-center gallery" id="resume">
            <div class="row">
        <div class="description text-center">
          <p class="card-text"><%= @surfboard.description %></p>
        </div>

            </div>
          </div>

          <div class="tab-pane text-center gallery" id="zoom">
            <div class="row">
              <div class="col-md-3 ml-auto">
                <img src="/assets/testsurfboard/finn.jpg" class="rounded">
                <img src="/assets/testsurfboard/pads.jpg" class="rounded">
              </div>
              <div class="col-md-3 mr-auto">
                <img src="/assets/testsurfboard/pads2.jpg" class="rounded">
                <img src="/assets/testsurfboard/surfboardride.jpg" class="rounded">

              </div>
            </div>
          </div>
          <div class="tab-pane text-center gallery" id="water">
            <div class="row">
              <div class="col-md-3 ml-auto">
                <img src="/assets/testkite/bandit ride.jpg" class="rounded">
                <img src="/assets/examples/clem-onojegaw.jpg" class="rounded">
                <img src="/assets/testkite/bandit ride.jpg" class="rounded">
              </div>
              <div class="col-md-3 mr-auto">
                <img src="/assets/examples/mariya-georgieva.jpg" class="rounded">
                <img src="/assets/testkite/bandit ride.jpg" class="rounded">
                <img src="/assets/testkite/bandit.jpg" class="rounded">
              </div>
            </div>
          </div>
          <div class="tab-pane text-center gallery" id="competence">
            <div class="row">

	  <div class="card card-body m-2" style="width: 300px">
            <p class="card-text">
	      Courbes : <%= @surfboard.courbes %> 
              <% while @courbes < @surfboard.courbes %>
	        <i class="fas fa-star"></i>
	        <% @courbes = @courbes + 1 %>
	      <%end%>
              <% while @courbes < 5 %>
	        <i class="far fa-star"></i>
                <% @courbes = @courbes + 1 %>
              <%end%>
		<% @courbes = 0 %>
		<br>
	      Wind <%= @surfboard.wind %>
              <% while @wind < @surfboard.wind %>
	        <i class="fas fa-star"></i>
	        <% @wind = @wind + 1 %>
	      <%end%>
              <% while @wind < 5 %>
	        <i class="far fa-star"></i>
                <% @wind = @wind + 1 %>
              <%end%>
		<% @wind = 0 %>
		<br>
	      Sideshore <%= @surfboard.sideshore %> 
              <% while @sideshore < @surfboard.sideshore %>
	        <i class="fas fa-star"></i>
	        <% @sideshore = @sideshore + 1 %>
	      <%end%>
              <% while @sideshore < 5 %>
	        <i class="far fa-star"></i>
                <% @sideshore = @sideshore + 1 %>
              <%end%>
		<% @sideshore = 0 %>
		<br>
	      Onshore <%= @surfboard.onshore %> 
              <% while @onshore < @surfboard.onshore %>
	        <i class="fas fa-star"></i>
	        <% @onshore = @onshore + 1 %>
	      <%end%>
              <% while @onshore < 5 %>
	        <i class="far fa-star"></i>
                <% @onshore = @onshore + 1 %>
              <%end%>
		<% @onshore = 0 %>
		<br>
	      Wave : <%= @surfboard.wave %> 
              <% while @wave < @surfboard.wave %>
	        <i class="fas fa-star"></i>
	        <% @wave = @wave + 1 %>
	      <%end%>
              <% while @wave < 5 %>
	        <i class="far fa-star"></i>
                <% @wave = @wave + 1 %>
              <%end%>
		<% @wave = 0 %>
		<br>
	      Freestyle <%= @surfboard.freestyle %> 
              <% while @freestyle < @surfboard.freestyle %>
	        <i class="fas fa-star"></i>
	        <% @freestyle = @freestyle + 1 %>
	      <%end%>
              <% while @freestyle < 5 %>
	        <i class="far fa-star"></i>
                <% @freestyle = @freestyle + 1 %>
              <%end%>
		<% @freestyle = 0 %>
		<br>
	      Straps <%= @surfboard.straps %> 
              <% while @straps < @surfboard.straps %>
	        <i class="fas fa-star"></i>
	        <% @straps = @straps + 1 %>
	      <%end%>
      		<% while @straps < 5 %>
	        <i class="far fa-star"></i>
        	<% @straps = @straps + 1 %>
              <%end%>
		<% @straps = 0 %>
		<br>
	      Strapless <%= @surfboard.strapless %> 
              <% while @strapless < @surfboard.strapless %>
	        <i class="fas fa-star"></i>
	        <% @strapless = @strapless + 1 %>
	      <%end%>
      		<% while @strapless < 5 %>
	        <i class="far fa-star"></i>
        	<% @strapless = @strapless + 1 %>
              <%end%>
		<% @strapless = 0 %>

            </p>
	  </div>

            </div>
          </div>
          <div class="tab-pane text-center gallery" id="favorite">
            <div class="row">
              <div class="col-md-3 mr-auto">
<iframe width="560" height="315" src="https://www.youtube.com/embed/ZhDjjSTaDcQ" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
		</div>
              </div>
            </div>
          </div>
        </div>

    </div>
      </div>

  </div>
</body>









