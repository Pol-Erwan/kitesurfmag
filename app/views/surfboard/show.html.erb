<%= render "layouts/navbartest" %>
<body class="pt-5 profile-page sidebar-collapse">
<div class="page-header" data-parallax="true" style="background-image: url('/assets/Cape_Town.jpg');"></div>
  <div class="main main-raised p-2">
    <div class="profile-content">
      <div class="container">
        <div class="row">
          <div class="col-md-12 ml-auto mr-auto">
            <div class="profile">
              <div class="avatar">
                <img src="/assets/testsurfboard/surfboard2.png" alt="Circle Image" class="img-raised rounded img-fluid">
                <img src="/assets/testsurfboard/finn.jpg" alt="Thumbnail Image" class="img-raised rounded img-fluid m-4" style="width:100px">
                <img src="/assets/testsurfboard/pads.jpg" alt="Thumbnail Image" class="img-raised rounded img-fluid m-4" style="width:100px">
                <img src="/assets/testsurfboard/pads2.jpg" alt="Thumbnail Image" class="img-raised rounded img-fluid m-4" style="width:100px">
              </div>
	    </div>
	  </div>
	</div>
      </div>
    </div>

    <h1 class="title" id="navshow"> <%= @surfboard.name %></h1>
	<h3 class="ml-4"> by <%= @surfboard.brand %></h3>

    <div class="row">
      <div class="col-md-8 ml-auto mr-auto">
        <div class="profile-tabs">
          <ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
	    <li class="nav-item">
              <i class="text-center fas fa-id-card"></i>
              <%= link_to "Id card", surfboard_path(anchor: "idcard"), class:"nav-link active" %>
            </li>
	    <li class="nav-item">
              <i class="text-center far fa-comment-dots"></i>
              <%= link_to "En bref", surfboard_path(anchor: "resume"), class:"nav-link" %>
            </li>
	    <li class="nav-item">
              <i class="text-center fas fa-images"></i>
              <%= link_to "Zoom", surfboard_path(anchor: "zoom"), class:"nav-link" %>
            </li>
	    <li class="nav-item">
              <i class="text-center fas fa-cogs"></i>
              <%= link_to "competences", surfboard_path(anchor: "competence"), class:"nav-link" %>
            </li>
	    <li class="nav-item">
              <i class="text-center fas fa-video"></i>
              <%= link_to "video", surfboard_path(anchor: "video"), class:"nav-link" %>
            </li>
	    <li class="nav-item">
	      <i class="text-center fas fa-shopping-cart"></i>
              <%= link_to "Buy", surfboard_path(anchor: "shop"), class:"nav-link" %>
            </li>

          </ul>
        </div>
      </div>
    </div>





	<section id="idcard">
          <h2 class="ml-5 fas fa-id-card"> Id Card</h2>
	<div class="d-flex justify-content-center">
          <div class="col-md-8">
            <div class="name">
	      <div class="card pb-4">
	        <div class="row">
		  <div class="col-md-5 col-md-offset-0 col-sm-10 col-sm-offset-1">
                    <div class="text-center">
                      <h2 class=""><i class="fas fa-id-badge"></i> <%= @surfboard.name %></h2>
                      <img src="/assets/testsurfboard/surfboardride.jpg" alt="Thumbnail Image" class="img-raised rounded img-fluid mt-2" style="width:200px">
                    </div>
                  </div>
                  <div class="mt-5 col-md-5 col-sm-12">
                    <h6><i class="fas fa-heart"></i>  Son point fort : <%= @surfboard.favorite %></h6>
                    <h6>Domain : <%= @surfboard.domain %></h6>
                    <h6>Taille testé : <%= @surfboard.testsize %>m</h6>
                    <h6>Tailles disponible : <%= @surfboard.size %></h6>
                    <h6>Prix en shop : <%= @surfboard.price %>€ pour une <%= @surfboard.testsize %>m nue</h6>
		    <h6>millésime : <%= @surfboard.year %></h6>
		    <a class="btn btn-success" href="https://fr.f-one.world/produit/bandit-2020/" target="blank_">more details</a>
		  </div>
                </div>
  		<a href="#navshow" class="scrollup d-flex justify-content-end align-items-end mr-3"><i class="btn-sm btn-primary fa fa-caret-square-up"></i></a>
              </div>
            </div>
          </div>
	</div>
	</section>

	<section id="resume">
          <h2 class="ml-5 fas fa-comment-dots"> En bref</h2>
	<div class="d-flex justify-content-center">
	  <div class="card col-lg-8 m-3 p-3">
            <div class="row">
              <div class="col-md-3">
                <ul class="nav nav-pills nav-pills-icons flex-column" role="tablist">
                  <div class="col-md-12 ml-auto mr-auto">
                    <img src="/assets/Hugo.jpg" alt="Thumbnail Image" class="img-raised rounded-circle img-fluid">
                  </div>
                </ul>
              </div>
              <div class="col-md-8">
                <div class="tab-content">
		  <p><%= @surfboard.description %></p>
                </div>
              </div>
            </div>
  		<a href="#navshow" class="scrollup d-flex justify-content-end align-items-end mr-3"><i class="btn-sm btn-primary fa fa-caret-square-up"></i></a>
          </div>
	</div>
	</section>

	<section id="zoom">
	          <h2 class="ml-5 fas fa-images"> Zoom</h2>
	<div class="d-flex justify-content-center">
	  <div class="card col-lg-8 m-3">
            <div class="row">
              <div class="col-md-3 ml-auto">
                <img src="/assets/testsurfboard/finn.jpg" class="rounded" style="width:200px">
                <img src="/assets/testsurfboard/pads.jpg" class="rounded" style="width:200px">
              </div>
              <div class="col-md-3 mr-auto">
                <img src="/assets/testsurfboard/pads2.jpg" class="rounded" style="width:200px">
                <img src="/assets/testsurfboard/surfboardride.jpg" class="rounded" style="width:200px">
              </div>
            </div>
  		<a href="#navshow" class="scrollup d-flex justify-content-end align-items-end m-3"><i class="btn-sm btn-primary fa fa-caret-square-up"></i></a>
	  </div>
	</div>
	</section>

	<section id="competence">
          <h2 class="ml-5 fas fa-cogs"> Compétences</h2>

<div class="m-3 d-flex flex-row">

<div class="card m-3 p-3" style="width:60%">
<h6>Transitions : <%= @surfboard.transitions %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-primary" role="progressbar" style="width: <%= @surfboard.transitions*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>Courbes: <%= @surfboard.courbes %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%= @surfboard.courbes*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>Wind: <%= @surfboard.wind %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: <%= @surfboard.wind*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>Side-shore: <%= @surfboard.sideshore %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: <%= @surfboard.sideshore*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>On-shore: <%= @surfboard.onshore %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: <%= @surfboard.onshore*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>Wave: <%= @surfboard.wave %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-rose" role="progressbar" style="width: <%= @surfboard.wave*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>Freestyle: <%= @surfboard.freestyle %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-rose" role="progressbar" style="width: <%= @surfboard.freestyle*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>Straps: <%= @surfboard.straps %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-rose" role="progressbar" style="width: <%= @surfboard.straps*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h6>Strapless: <%= @surfboard.strapless %>/5</h6>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-rose" role="progressbar" style="width: <%= @surfboard.strapless*20 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>

</div>


<div class="card d-flex align items-center m-3 p-3">
<canvas id="birdsChart" width="500px" height="200px"></canvas>
<script>
var birdsCanvas = document.getElementById("birdsChart");

var birdsData = {
  labels: ["Transitions","Courbes","Wind","Side-Shore","On-Shore","Wave","Freestyle","Straps","Strapless"],
  datasets: [{
    data: [<%= @surfboard.transitions %>,<%= @surfboard.courbes %>, <%= @surfboard.wind %>, <%= @surfboard.sideshore %>, <%= @surfboard.onshore %>, <%= @surfboard.wave %>, <%= @surfboard.freestyle %>, <%= @surfboard.straps %>, <%= @surfboard.strapless %>],
    backgroundColor: [
      "rgba(255, 0, 0, 0.5)",
      "#cde9ce",
      "rgba(200, 50, 255, 0.5)",
      "rgba(0, 100, 255, 0.5)",
      "rgba(255, 0, 0, 0.5)",
      "rgba(255, 0, 0, 0.5)",
      "rgba(255, 0, 0, 0.5)",
      "rgba(255, 0, 0, 0.5)",
      "rgba(100, 255, 0, 0.5)"
    ]
  }]
};

var polarAreaChart = new Chart(birdsCanvas, {
  type: 'polarArea',
  data: birdsData
});
</script>
  		<a href="#navshow" class="scrollup d-flex justify-content-end align-items-end"><i class="btn-sm btn-primary fa fa-caret-square-up"></i></a>
</div>


</div>

	</section>

