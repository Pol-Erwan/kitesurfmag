	</div>
        </section>

	<section id="shop">
	          <h2 class="ml-5 fas fa-shopping-cart"> where buy</h2>
	<div class="d-flex justify-content-center">
	  <div class="card col-lg-8 m-3">
            <div class="row">
              <div class="col-md-3">
                <img src="/assets/testkite/bandit.png" class="rounded m-1" style="width:100px"> flysurf
                <img src="/assets/testkite/bandit.png" class="rounded m-1" style="width:100px"> vague et vent
                <img src="/assets/testkite/bandit.png" class="rounded m-1" style="width:100px"> corner chop
              </div>
            </div>
  		<a href="#navshow" class="scrollup d-flex justify-content-end align-items-end m-3"><i class="btn-sm btn-primary fa fa-caret-square-up"></i></a>
	  </div>
	</div>
	</section>

	<div class="d-flex justify-content-end">
              <a class="btn-primary btn-sm" href="<%= surfboard_index_path %>"><i class="fas fa-caret-square-left"></i>  Retour surfboards</a>
	</div>
    </div>
  </div>
</div>
</body>



