<%= render "layouts/navbar" %>
  <div class="page-header header-filter" data-parallax="true" style="background-image: url('/assets/background/adminuser.jpg')">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <h1 class="title text-center">Liste des utilisateurs</h1>
                <a class="carousel-control-prev" href="<%= admin_article_index_path %>" role="button" data-slide="prev">
                  <i class="fas fa-caret-square-left" style="font-size:50px"></i>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="<%= admin_event_index_path %>" role="button" data-slide="next">
		  <i class="fas fa-caret-square-right" style="font-size:50px"></i>
                  <span class="sr-only">Next</span>
                </a>
        </div>
      </div>
    </div>
  </div>

  <div class="main main-raised bg-dark">
    <div class="container">


  <div class="vertical">
    <%= link_to "  ", admin_root_path, class:"pull-left btn btn-danger btn-just-icon fas fa-arrow-left fa-2x" %>
  </div>
<div class="text-center">
  <%= link_to "Nouvel utilisateur", new_admin_user_path, class:"pull-right btn btn-success" %>
</div>
<br>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Prénom</th>
      <th scope="col">email</th>
      <th scope="col">Date de création</th>
      <th scope="col">voir en ligne</th>
      <th scope="col">modifier</th>
      <th scope="col">supprimer</th>
    </tr>
  </thead>
  <tbody>
<%  @users.each_with_index do |t,index| %>
    <tr>
      <th scope="row"><%= t.id %></th>
      <td><%= t.first_name %></td>
      <td><%= t.email %></td>
      <td><%= t.created_at %></td>
      <td><%= link_to "voir", user_path(t.id), class:"btn-sm btn-success" %></td>
      <td><%= link_to "Modifier", edit_admin_user_path(t), class:"btn-sm btn-primary" %></td>
      <td><%= link_to "Supprimer", admin_user_path(t.id), class:"btn-sm btn-danger", method: :delete %></td>
    </tr>
<%end%>
  </tbody>
</table>

</div>
</div>

