<body style="background-image: url('/assets/background/adminuser.jpg')">

  <% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
            <p>Nous n'avons pas réussi à modifier l'utilisateur pour la (ou les) raison(s) suivante(s) :</p>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li class="li_errors"><%= message %></li>
              <% end %>
            </ul>
    </div>
      <% end %>
<div class="m-2">
    <%= link_to " ", admin_users_path, class:"pull-left btn btn-danger fas fa-arrow-left", style:"font-size:30px" %>
</div>
<br>
        <h2 class="title text-white"> modifer l'utilisateur <%= @user.first_name %></h2>      
<div class="container card card-body p-5 col-md-5" >
        <h3 class="title text-center"> Infos principales</h3>
  <div class="text-center">
           <%= form_tag url_for(action: 'create'), method: 'post' do %>
                <div class="text-center">
                  <%= label_tag 'Prénom' %>
                  <%= text_field_tag 'first_name', @user.first_name, class: "form-control" %>
                </div>
		<br><br>
                <div class="text-center">
                  <%= label_tag 'Nom' %>
                  <%= text_field_tag 'last_name', @user.last_name, class: "form-control" %>
                </div>
              <br /> <br />
              <%= label_tag 'Email' %>
              <%= text_field_tag 'email', @user.email, class: "form-control" %>
              <br /> <br />
              <%= label_tag 'Mot de passe' %>
              <%= password_field_tag 'password', @user.password, autocomplete: "new-password", class: "form-control" %>
              <br /> <br />
              <%= label_tag 'Confirmation_du_mot_de_passe' %>
              <%= password_field_tag 'password_confirmation', @user.password_confirmation, autocomplete: "new-password", class: "form-control" %>
		<br><br>
              <center><%= submit_tag "Creer l'utilisateur", class:"btn btn-outline-primary" %></center>
    
            <% end %>
        </div>
      </div>
     </div>
  </div>

</body>
