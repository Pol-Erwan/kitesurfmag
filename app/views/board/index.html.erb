<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Control</th>
      <th scope="col">Progression</th>
      <th scope="col">Freeride</th>
      <th scope="col">Freestyle</th>
      <th scope="col">Maniability</th>
    </tr>
  </thead>
      <% @boards.each do |t, index| %>
  <tbody>
    <tr>
      <th scope="row"><%= t.name %></th>
      <td><% while @control < t.control %>
	    <i class="fas fa-star"></i>
	    <% @control = @control + 1 %>
	  <%end%>
	  <% @control = 0 %>
      </td>
      <td><% while @progression < t.progression %>
	    <i class="fas fa-star"></i>
	    <% @progression = @progression + 1 %>
	  <%end%>
	  <% @progression = 0 %>
      </td>
      <td><% while @freeride < t.freeride %>
	    <i class="fas fa-star"></i>
	    <% @freeride = @freeride + 1 %>
	  <%end%>
	  <% @freeride = 0 %>
      </td>
      <td><% while @freestyle < t.freestyle %>
	    <i class="fas fa-star"></i>
	    <% @freestyle = @freestyle + 1 %>
	  <%end%>
	  <% @freestyle = 0 %>
      </td>
      <td><% while @maniability < t.maniability %>
	    <i class="fas fa-star"></i>
	    <% @maniability = @maniability + 1 %>
	  <%end%>
	  <% @maniability = 0 %>
      </td>

    </tr>
  </tbody>
<%end%>
</table> 
</section>


